<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="1dp"
        android:layout_height="35dp"
        android:padding="4dp"
        android:background="@android:color/white"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="5">
            <TextView
                android:id="@+id/score_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Batsman"
                android:layout_weight="2"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/score_card_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="status"
                android:layout_weight=".5"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/score_card_runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Runs"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/score_card_balls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Balls"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/score_card_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="4s"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/score_card_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="6s"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/score_card_sr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="SR"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>